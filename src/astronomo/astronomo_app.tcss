#nav-bar {
    dock: top;
    height: auto;
    width: 100%;
}

#back-button, #forward-button {
    min-width: 4;
    margin: 0 1;
    background: $surface;
    content-align: center top;
}

#url-input {
    width: 100%;
    background: $surface;
    margin: 0;
    padding-left: 1;
}

#main-content {
    height: 1fr;
    width: 100%;
}

#content {
    width: 1fr;
    height: 100%;
    link-color: $text-accent;
    link-background-hover: $accent-muted;
    link-style: none;
    link-style-hover: underline;
    link-color-hover: $text-accent;
    padding: 1;
    border: heavy $primary;
}

/* Bookmarks Sidebar */
#bookmarks-sidebar {
    width: 30;
    height: 100%;
    border-left: solid $primary;
    display: none;
}

#bookmarks-sidebar.-visible {
    display: block;
}
